<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/white"
    android:elevation="6dp"
    android:orientation="vertical"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/textview_good_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Good name" />

    <TextView
        android:id="@+id/textview_good_barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="1234567890" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/account_num"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_account_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            tools:text="10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fact_num"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/textview_fact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:inputType="number"
            tools:text="10" />

    </LinearLayout>

</LinearLayout>